<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_bottom_sheet_background"
    >

    <View
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_4sdp"
        android:background="@color/light_black"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_12sdp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="What would you like to do?"
    android:layout_marginTop="@dimen/_14sdp"
    android:layout_gravity="center"
    android:textColor="@color/black"
    android:textSize="@dimen/_13sdp"
    android:fontFamily="@font/poppins_bold"
    tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/setHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bottom_sheet_failed"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/set_home"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set on home screen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setLookScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bottom_sheet_failed"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/look_screen_home"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set on look screen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setBothScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bottom_sheet_failed"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/set_both"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set on both screen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <Button
        android:id="@+id/bottomSheetDialogCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="Cancel"
        android:backgroundTint="@color/black_blue"
        tools:ignore="HardcodedText" />


</LinearLayout>