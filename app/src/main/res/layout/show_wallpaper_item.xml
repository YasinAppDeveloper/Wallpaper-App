<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/test_wallpaper"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/test_wallpaper"
                android:id="@+id/showWallpaper"
                tools:ignore="ContentDescription" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginEnd="@dimen/_10sdp"
                      tools:ignore="UseCompoundDrawables,UselessParent">

                      <ImageView
                          android:layout_width="@dimen/_30sdp"
                          android:layout_height="@dimen/_30sdp"
                          android:background="@drawable/btn_shape"
                          tools:ignore="ContentDescription"
                          android:layout_gravity="center"
                          android:padding="@dimen/_8sdp"
                          android:src="@drawable/share"/>

                      <TextView
                          android:layout_width="@dimen/_47sdp"
                          android:layout_height="wrap_content"
                          android:text="Share"
                          android:textAlignment="center"
                          android:textColor="@color/white"
                          android:paddingStart="@dimen/_7sdp"
                          android:paddingEnd="@dimen/_7sdp"
                          android:textSize="@dimen/_8sdp"
                          android:paddingTop="@dimen/_2sdp"
                          android:paddingBottom="@dimen/_2sdp"
                          android:layout_marginTop="@dimen/_5sdp"
                          android:background="@drawable/btn_shape_rectangle"
                          tools:ignore="HardcodedText" />

                  </LinearLayout>

                    <LinearLayout
                        android:id="@+id/showBottomSheet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/set_wallpaper_shape"
                            tools:ignore="ContentDescription"
                            android:padding="@dimen/_8sdp"
                            android:layout_gravity="center"
                           android:src="@drawable/br"/>

                        <TextView
                            android:layout_width="@dimen/_47sdp"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textColor="@color/white"
                            android:paddingStart="@dimen/_7sdp"
                            android:paddingEnd="@dimen/_7sdp"
                            android:textSize="@dimen/_8sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:textAlignment="center"
                            android:paddingBottom="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/btn_shape_rectangle"
                            tools:ignore="HardcodedText" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        tools:ignore="UseCompoundDrawables,UselessParent">

                        <ImageView
                            android:id="@+id/favourite"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/btn_shape"
                            tools:ignore="ContentDescription"
                            android:padding="@dimen/_8sdp"
                            android:layout_gravity="center"
                           android:src="@drawable/fav"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favourite"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:paddingStart="@dimen/_7sdp"
                            android:paddingEnd="@dimen/_7sdp"
                            android:textSize="@dimen/_8sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/btn_shape_rectangle"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </RelativeLayout>

</RelativeLayout>